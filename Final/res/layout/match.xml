<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/tile"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvTeam1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Arsenal" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:gravity="center"
            android:text="0&apos;"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/tvTeam2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Manchester United" />
    </LinearLayout>

    <Button
        android:id="@+id/button1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Start 2nd Half"
        android:background="#FFFF12" />

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:text="0:0" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/tvScore"
    android:layout_centerHorizontal="true"
    android:gravity="center" >

    <ImageView
        android:id="@+id/ivMatchTeam1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:src="@drawable/arsenal" />

    <ImageView
        android:id="@+id/ivMatchTeam2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:src="@drawable/arsenal" />
</LinearLayout>

</RelativeLayout>